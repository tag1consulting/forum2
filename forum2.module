  $num_topics = _forum2_num_topics($tid);

  $output .= "<div align=\"center\"><small>(".strtr(t("%a topics, %b topics per page, page %c of %d"), array("%a" => $num_topics, "%b" => $forum2_per_page, "%c" => ceil(($offset + 1)/$forum2_per_page), "%d" => ceil($num_topics/$forum2_per_page))).")</small></div>";

  if ($topics) {
    $output .= "<table border=\"0\" width=\"100%\">\n";
    $output .= " <tr><th>&nbsp;</th><th>&nbsp;</th><th>". t("topic") ."</th><th>". t("replies") ."</th><th>". t("posted") ."</th><th>". t("last reply") ."</th></tr>";

    foreach ($topics as $topic) {
      // folder is new if topic is new or there are new comments since last visit
      if ($topic->shadow) {
        $output .= "
          <tr>
            <td>"._forum2_get_folder_icon($topic->new, $topic->num_comments, $topic->comment_mode)."</td>
            <td>"._forum2_get_icon($topic)."</td>
            <td>". check_output($topic->title) ."</td>
            <td align=\"center\" colspan=\"3\"><a href=\"module.php?mod=forum2&tid=$topic->shadow\">".t("This topic has been moved")."</a></td>
          </tr>";
      } else {
        $output .= "
          <tr>
            <td>"._forum2_get_folder_icon($topic->new, $topic->num_comments, $topic->comment_mode)."</td>
            <td>"._forum2_get_icon($topic)."</td>
            <td><a href=\"node.php?id=$topic->nid\">". check_output($topic->title) ."</a></td>
            <td align=\"center\">".$topic->num_comments.($topic->new_replies ? " (".t("%a new", array("%a" => $topic->new_replies)).")" : "")."</td>
            <td align=\"center\">"._forum2_format($topic)."</td>
            <td align=\"center\">"._forum2_format($topic->last_reply)."</td>
          </tr>";
      }
    }

    $output .= "</table></blockquote>\n";
  }

  $output .= "<table width=\"100%\" border=\"0\" cellspacing=\"0\" cellpadding=\"0\"><tr>";

  if ($offset > 0) {
    $output .= "<td width=\"33%\"><div align=\"left\"><h1><a href=\"module.php?mod=forum2&tid=$tid&sortby=$sortby&forum2_per_page=$forum2_per_page&offset=".($offset-$forum2_per_page)."\">".t("Previous topics")."</a></h1></div></td>";
  } else {
    $output .= "<td width=\"33%\">&nbsp;</td>";
  }

  $output .= "<td width=\"33%\"><div align=\"center\"><h1><a href=\"module.php?mod=node&op=add&type=forum2&tid=$tid\">".t("Start new topic")."</a></h1></div></td>";

  if (count($topics) >= $forum2_per_page) {
