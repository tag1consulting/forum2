function forum2_save($op, $node) {
  if ($op == "approve") {
    return array("status" => 1);
  }

  if ($op == "create") {
    return array("tid", "icon_num", "shadow");
  }

  if ($op == "decline") {
    return array("status" => 0);
  }

  if ($op == "update") {
    #print_r($node);
    // if she changed the term, we could have to leave a shadow
    $old_terms = explode(",", $node->old_taxonomy);
    foreach ($node->taxonomy as $term) {
      if ($term && (!in_array($term, $old_terms)) && $node->shadow) {
        $shadow = $term;
        break;
      }
    }
    return array("tid", "icon_num", "shadow" => $shadow, "old_taxonomy");
  }
}

function forum2_load($node) {
  $forum = db_fetch_object(db_query("SELECT * FROM forum2 WHERE nid = '$node->nid'"));

  return $forum;
}

function forum2_link($type) {
  if ($type == "page" && user_access("access content")) {
    $links[] = "<a href=\"module.php?mod=forum2\">". t("forum") ."</a>";
  }

  return $links ? $links : array();
}

function forum2_view($node) {
  global $theme;
    
  $term_data = array_shift(taxonomy_node_get_terms($node->nid));
  if (!$term_data) {
    // we are previewing
    $term_data = taxonomy_get_term($node->taxonomy[0]);
  }
  $voc = taxonomy_get_vocabulary($term_data->vid);

  $output .= "<p>"._forum2_get_icon($node)." <a href=\"module.php?mod=forum2\">".check_output($voc->name)."</a> : <a href=\"module.php?mod=forum2&tid=$term_data->tid\">".check_output($term_data->name)."</a>";  
  
  $output .= " / <b>". check_output($node->title) ."</b><br>".t("%a by %b", array("%a" => format_date($node->created), "%b" => format_name($node)))."</p><p>". check_output($node->body, 1) ."</p>";
  $output .= "<p>". $theme->links(link_node($node, $main)) ."</p>";

  $theme->box(t("Discussion forum"), $output);
}

