function forum2_page() {
  global $theme, $tid, $sortby, $forum2_per_page, $offset;

  if (user_access("access content")) {
    if (empty($sortby)) {
      $sortby = variable_get("forum2_order",1);
    }
    if (empty($forum2_per_page)) {
      $forum2_per_page = variable_get("forum2_per_page", 10);
    }
    if (empty($offset)) {
      $offset = 0;
    }
  
    $forums = forum2_get_forums($tid);
    $parents = forum2_get_parents($tid);
    $topics = forum2_get_topics($tid, $sortby, $forum2_per_page, $offset);

    forum2_render($forums, $topics, $parents, $tid, $sortby, $forum2_per_page, $offset);
  }
  else {
    $theme->header();
    $theme->box(t("Access denied"), message_access());
    $theme->footer();
  }
}

