function forum2_insert($node) {
  $node->icon = _forum2_decode_icon($node);
  if (!$node->shadow) {
    db_query("INSERT INTO forum2 (nid, icon) VALUES ('".check_query($node->nid)."', '".check_query($node->icon)."')");
  } else {
    // we created a shadow, a link to a moved topic in a new forum
    db_query("INSERT INTO forum2 (nid, icon, shadow) VALUES ('".check_query($node->nid)."', '".check_query($node->icon)."', '".check_query($node->shadow)."')");
  }
}

function forum2_update($node) {
  #print_r($node);
  $node->icon = _forum2_decode_icon($node);
  db_query("UPDATE forum2 SET icon = '".check_query($node->icon)."' WHERE nid = '".check_query($node->nid)."'");
  if ($node->shadow) {
    // insert in old forum a new topic, with link to new forum
    #print_r($node);
    $node->nid = "";
    $node->type = "forum2";
    #$node->title = $title;
    $node->status = 1;
    #$node->comment = 0;
    $node->taxonomy = array($node->old_taxonomy);
    #print_r($node);
    node_submit($node);
    #node_save(array2object(array("uid" => $node->uid, "type" => "forum2", "title" => $node->title, "status" => 1, "comment" => 0, "shadow" => $node->shadow)), array("uid", "title", "type", "status", "comment", "shadow", "icon"));
  }
}

function _forum2_decode_icon($node) {
  // to prevent malicious users
  #print_r($node);
  if ($icon_path = variable_get("forum2_topic_icon_path", "images/forum/topics/")) {
    if ($dir = @opendir($icon_path)) {
      $icon_num = 0;
      while($icon = readdir($dir)) {
        if ($icon == '.' || $icon == '..') {continue;}
        if ($icon_num == $node->icon_num) {$myicon = $icon;}
        $icon_num++;
      }  
      closedir($dir);
    }
  }
  return $myicon;
}

function forum2_delete(&$node) {
  db_query("DELETE FROM forum2 WHERE nid = '".check_query($node->nid)."'");
}

function _forum2_num_comments($nid) {
  $value = db_fetch_object(db_query("SELECT COUNT(cid) AS count FROM comments WHERE nid = '$nid'"));
  return ($value) ? $value->count : 0;
}

function _forum2_last_comment($nid) {
  $value = db_fetch_object(db_query("SELECT timestamp FROM comments WHERE nid = '$nid' ORDER BY timestamp DESC LIMIT 1"));
  return ($value) ? format_date($value->timestamp, "small") : "&nbsp;";
}

function _forum2_last_reply($nid) {
  $value = db_fetch_object(db_query("
    SELECT c.timestamp, u.name, u.uid
    FROM comments c
    LEFT JOIN users u ON c.uid = u.uid
    WHERE c.nid = '$nid'
    ORDER BY c.timestamp DESC
    LIMIT 1
  "));
  return $value;
}

function _forum2_format($topic) {
  if ($topic) {
    return format_date($topic->timestamp, "small")."<br>".t("by")." ". format_name($topic);
  } else {
    return message_na();
  }
}

function forum2_get_forums($tid = 0) {
  global $user;
  
  if (!$tid) {$tid = 0;}
  
  $forums = unserialize(cache_get("forum2:$tid"));
  if (!$forums) {
    taxonomy_get_tree(variable_get("forum2_nav_vocabulary", ""), $_forums, $tid);
    $n = 0;
    foreach ($_forums as $forum) {
      if (in_array($forum->tid, variable_get("forum2_containers", ""))) {
        $forum->container = 1;
      }
      else {
        $forum->num_topics = _forum2_num_topics($forum->tid);
        $forum->num_posts = _forum2_num_replies($forum->tid) + $forum->num_topics;
        $forum->last_post = _forum2_last_post($forum->tid);
      }
      $forums[$forum->tid] = $forum;
      $n++;
    }
    cache_set("forum2:$tid", serialize($forums), time()+60*10);
  }

  if ($user->uid && $forums) {
    #$topics_read = _forum2_topics_read($user->uid);
    foreach (_forum2_topics_read($user->uid) as $tid => $old) {
      $forums[$tid]->old_topics = $old;
    }
  }

  return $forums;
}

function forum2_get_parents($tid) {
  if ($tid) {
    $parents[] = taxonomy_get_term($tid);
  }
  $n = 0;
  while ($parent = taxonomy_get_parents($parents[$n]->tid)) {
    $parents = array_merge($parents, $parent);
    $n++;
  }
  return $parents;
}

function _forum2_num_topics($term) {
  $value = db_fetch_object(db_query("SELECT COUNT(n.nid) AS count FROM node n, term_node r WHERE r.tid = '$term' AND n.nid = r.nid AND n.status = 1 AND n.type = 'forum2'"));
  return ($value) ? $value->count : 0;
}

function _forum2_num_replies($term) {
  $value = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM comments c, term_node r, node n WHERE r.tid = '$term' AND n.nid = r.nid AND n.nid=c.nid AND n.status = 1 AND n.type = 'forum2'"));
  return ($value) ? $value->count : 0;
}

function _forum2_topics_read($uid) {
  $result = db_query("
    SELECT tid, count(*) AS c
    FROM history h, term_node r, node n
    WHERE r.nid = h.nid
    AND n.nid = h.nid
    AND n.type = 'forum2'
    AND n.status = 1
    AND h.uid = ".check_query($uid)."
    GROUP BY tid
  ");
  
  while ($obj = db_fetch_object($result)) {
    $topics_read[$obj->tid] = $obj->c;
  }
  
  return $topics_read;
}

function _forum2_last_post($term) {
  $topic = db_fetch_object(db_query("
    SELECT n.created AS timestamp, u.name AS name, u.uid AS uid
    FROM node n, term_node r
    LEFT JOIN users u ON n.uid = u.uid
    WHERE r.tid = '$term'
    AND n.nid = r.nid
    AND n.type = 'forum2'
    AND n.status = 1
    ORDER BY timestamp DESC
    LIMIT 1
  "));

  $reply = db_fetch_object(db_query("
    SELECT c.timestamp, u.name AS name, u.uid AS uid
    FROM term_node r, node n
    LEFT JOIN comments c ON n.nid=c.nid
    LEFT JOIN users u ON c.uid = u.uid
    WHERE r.tid = '$term'
    AND n.nid = r.nid
    AND n.type = 'forum2'
    AND n.status = 1
    ORDER BY c.timestamp DESC
    LIMIT 1
  "));

  $value = ($topic->timestamp > $reply->timestamp) ? $topic : $reply;

  return $value;
}

